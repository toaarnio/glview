[FORMAT]

# Increase certain limits that are too tight by default
max-line-length=120
max-locals=20
max-branches=20
max-args=6

# Regexp for a line that is allowed to be longer than the limit.
ignore-long-lines=\".*\"

# Expected format of line ending, e.g. empty (any line ending), LF or CRLF.
expected-line-ending-format=LF

# Disable warnings that are not applicable to our coding style
disable =
  no-self-use,
  invalid-name,
  unnecessary-lambda-assignment,
  f-string-without-interpolation,
  broad-except,
  too-few-public-methods,
  too-many-statements,
  too-many-instance-attributes,
  consider-using-with,
  use-a-generator,
  locally-disabled,
  fixme
